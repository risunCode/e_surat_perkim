# ===================================
# E-SURAT PERKIM CONFIGURATION
# ===================================

# Aplikasi
APP_NAME="E-Surat Perkim"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Digital Signature
SIGNATURE_KEY=

# Locale
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# Maintenance
APP_MAINTENANCE_DRIVER=file

# ===================================
# DATABASE
# ===================================
# Gunakan MySQL atau MariaDB
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=e_surat_perkim
DB_USERNAME=root
DB_PASSWORD=

# ===================================
# SESSION & CACHE
# ===================================
SESSION_DRIVER=database
SESSION_LIFETIME=10080
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
QUEUE_CONNECTION=database

# ===================================
# FILESYSTEM
# ===================================
FILESYSTEM_DISK=local

# ===================================
# LOGGING
# ===================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===================================
# SECURITY
# ===================================
BCRYPT_ROUNDS=12

# ===================================
# BROADCAST (tidak digunakan)
# ===================================
BROADCAST_CONNECTION=log

# ===================================
# MAIL (tidak digunakan - pakai security questions)
# ===================================
MAIL_MAILER=log

# ===================================
# VITE
# ===================================
VITE_APP_NAME="${APP_NAME}"
